<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="university.FXMLControllers.LoginController">
    <children>
        <ImageView fitHeight="160.0" fitWidth="600.0" pickOnBounds="true">
            <image>
                <Image url="@../../../../../Desktop/Bulk/saved%20images/image-6.jpg" />
            </image>
        </ImageView>
        <GridPane alignment="CENTER" prefHeight="120.0" prefWidth="600.0">
            <Label text="Username : " GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="252.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="1" />    
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button onAction="#loginBtnPressed" prefHeight="26.0" prefWidth="377.0" text="Login!" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="10.0" prefWidth="60.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="199.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </GridPane>
    </children>
</VBox>
